<resources>

    <!--Application-->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--Standard content titles-->
    <style name="content_title" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:maxEms">24</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!--Standard content text-->
    <style name="content_text" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:maxEms">24</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColorLink">@color/linkColour</item>
    </style>

</resources>
