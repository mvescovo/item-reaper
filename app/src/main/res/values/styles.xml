<resources>

    <!--Application-->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--Standard content titles-->
    <style name="content_title" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:maxEms">@integer/max_ems</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:maxLength">@integer/max_length_small</item>
    </style>

    <style name="caption" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:maxEms">@integer/max_ems</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:maxLength">@integer/max_length_small</item>
    </style>

    <!--Standard content text-->
    <style name="content_text1" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:maxEms">@integer/max_ems</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColorLink">@color/linkColour</item>
        <item name="android:maxLength">@integer/max_length_long</item>
    </style>

    <style name="content_text2" parent="Base.TextAppearance.AppCompat.Body2">
        <item name="android:maxEms">@integer/max_ems</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColorLink">@color/linkColour</item>
        <item name="android:maxLength">@integer/max_length_long</item>
    </style>

    <!--Card-->
    <style name="card_caption" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:paddingBottom">@dimen/padding_text</item>
        <item name="android:maxLength">@integer/max_length_small</item>
    </style>

    <style name="card_content_primary" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:paddingBottom">@dimen/padding_text</item>
        <item name="android:maxLength">@integer/max_length_small</item>

    </style>

    <style name="card_content_secondary" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:paddingBottom">@dimen/padding_text</item>
        <item name="android:maxLength">@integer/max_length_long</item>
    </style>

    <!--Edit Item-->
    <style name="content_text_edit_item_standard">
        <item name="android:maxLength">@integer/max_length_small</item>
    </style>
    <style name="content_text_edit_item_large">
        <item name="android:maxLength">@integer/max_length_long</item>
    </style>
    <style name="content_text_edit_item_currency">
        <item name="android:maxLength">@integer/max_length_currency</item>
    </style>

    <!--Items-->
    <style name="no_items" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:maxEms">@integer/max_ems</item>
        <item name="android:maxLength">@integer/max_length_small</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!--Item Details-->
    <style name="content_text1.details">
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="content_text2.details">
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <!--Widget-->
    <style name="ItemWidget" parent="AppTheme">
        <item name="android:background">@color/white</item>
    </style>

    <style name="WidgetHeading">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="WidgetTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">@dimen/widget_margin</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WidgetAddItemButton">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">@dimen/widget_margin</item>
    </style>

    <style name="WidgetEmpty" parent="ItemWidget">
        <item name="android:padding">@dimen/widget_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <!--Need to set widget text colour explicitly since "?android:attr/textColorPrimary" returns
    different results on pre API 24 vs 24+. The same goes for other "?android:attr"'s-->
    <style name="widget_card_caption" parent="card_caption">
        <item name="android:textColor">@android:color/tertiary_text_light</item>
    </style>

    <style name="widget_card_content_primary" parent="card_content_primary">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="widget_card_content_secondary" parent="card_content_secondary">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

</resources>
